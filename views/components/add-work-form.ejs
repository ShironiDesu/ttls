<h1 class="title">Add Work</h1>
<form action="/add-work" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title" class="label-title">Title</label>
    <input type="text" id="title" name="title" class="input-title" required />
  </div>
  <div class="form-group">
    <label for="description" class="label-description">Description</label>
    <textarea
      id="description"
      name="description"
      class="input-description"
      required
    ></textarea>
  </div>
  <div class="form-group">
    <label for="image" class="label-image">Image</label>
    <input type="file" id="image" name="image" class="input-image" required />
  </div>
  <button type="submit">Add Work</button>
</form>
